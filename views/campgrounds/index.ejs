<% layout('/layouts/boilerplate')-%>

    <h1>all campgrounds</h1>
   
    
    <%for(let camp of campgrounds) {%>
 <div class="card mb-3">
     <div class="row g-0">
        <div class="col-md-4">
        <img class="img-thumbnail" src="<%=camp.image%>" alt="image">
        </div>
        <div class="col-md-8">
    <div class="class-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%=camp.description%></p>
        <p class="card-text">
            <small class="text-muted"><%= camp.location%> </small> 
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">view <%= camp.title %> </a>
    </div>
</div>
     </div>
    </div>
        <% } %>
   
   
    <a href="/campgrounds/new">create new Campground</a>   
